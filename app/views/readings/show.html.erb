<li class="list-group-item">
  <div class="panel panel-default">
    <div class="panel-heading">
	  <h3 class="panel-title"><%= @reading.user.username.capitalize %></h3>
	  <p class="help-block"><i class="fa fa-clock-o"></i> Reading posted <%= time_ago_in_words(@reading.created_at) %> ago</p>
	</div>
	<div class="panel-body">
	  <p><%= simple_format(@reading.content) %></p>
	</div>
  </div>
  <div class="panel panel-default">
  <div class="panel-body">
    <% if @reading.ratings.count <= 0  %>
    <%= render 'shared/rating_form' %>
    <% else %>
    Given Rating is saved.
  <% end %>
  </div>
</div>
  




   
</li>

