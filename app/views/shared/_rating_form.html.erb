<h1>Please leave a Rating</h1>

<%= form_for(@rating) do |f| %>
  <div class="form-group">
    <%= f.label "The Reading touched me" %>
    <div class="row">
      <div class="col-sm-2">
      <%= f.text_field :score01, placeholder: "Fill in rating...", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "I felt seen by the Reading" %>
    <div class="row">
      <div class="col-sm-2">
      <%= f.text_field :score02, placeholder: "Fill in rating...", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "I gained a new insight by the Reading" %>
    <div class="row">
      <div class="col-sm-2">
      <%= f.text_field :score03, placeholder: "Fill in rating...", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "The Reading supported by Question/Situation" %>
    <div class="row">
      <div class="col-sm-2">
      <%= f.text_field :score04, placeholder: "Fill in rating...", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "The Reading focussed on karma/shadow (1) vs light/potential (5)" %>
    <div class="row">
      <div class="col-sm-2">
      <%= f.text_field :score05, placeholder: "Fill in rating...", class: "form-control" %>
      </div>
    </div>
  </div>

<%= f.hidden_field :reading_id, :value => @reading.id %>

  <%= f.submit "Add Rating", class: "btn btn-lg btn-primary" %>
<% end %>
